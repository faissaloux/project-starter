{% extends "admin/layout.twig" %}
{% block title %} اضافة تصنيف جديد للأسئلة الشائعة{% endblock %}
{% block content %}	

<!-- Main content -->
<div class="content-wrapper">


				<!-- Page header -->
				<div class="page-header page-header-transparent">
					<div class="page-header-content">
						<div class="page-title">
							<h1> <span class="text-semibold">{{l.FaqsCategoriesPage.0}}</span></h1>
							<ul class="breadcrumb position-left">
								    {% if searchView != true %}
                                    <p>{{l.FaqsCategoriesPage.1}} : {{ pagination.count }} {{l.FaqsCategoriesPage.2}}</p>
                                    {% endif %}
							</ul>
						</div>
					</div>
				</div>
				<!-- /page header -->


<!-- Content area -->
<div class="content">
			        {% include "admin/elements/flash.twig" %}
			  
			      <div class="col-md-6">
			          <div class="panel panel-flat">
 
        <div class="panel-body">
            <form method="post" action="{{path_for('faqs.cat.create')}}">
                <fieldset class="content-group">
                    <legend class="text-bold">{{l.FaqsCategoriesPage.3}}</legend>
                    <div class="form-group">
                        <label class="control-label">{{l.FaqsCategoriesPage.4}}</label>
                        <input type="text" value="{%  if flash('error') %}{{old.name}}{%  endif %}" class="form-control" name="name" placeholder="{{l.FaqsCategoriesPage.4}}">
                    </div>
                    
                    {% if edit_page == '1' %}
                    <input type="hidden" name='edit' value="{{old.id}}">
                    {% endif %}
                    <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                    {{l.FaqsCategoriesPage.6}}
                    <i class="icon-arrow-left13 position-right"></i>
                    </button>
                    </div>
                </fieldset>								
            </form>
        </div>
    </div>        
			      </div>
			      
			      
			      <div class="col-md-6">
			          <div class="panel panel-flat">
    <table class="table datatable datatable-basic">
        <thead>
            <tr>
                <th><b> # </b></th>
                <th><b>{{l.FaqsCategoriesPage.7}}</b></th>
                <th class="text-center"><b>{{l.FaqsCategoriesPage.10}}</b></th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
            <tr id=''>
            <td>{{categorie.id}}</td>
            <td>{{categorie.name}}</td>

            <td class="text-center">
                <ul class="icons-list">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-menu9"></i></a>
                    <ul class="dropdown-menu dropdown-menu-right">
                     
                     
                      
                    
                      <li><a href="{{ path_for('faqs.cat.edit', {'id': categorie.id}) }}" class="text-primary-600"><i class="icon-pencil7 position-left"></i>{{l.FaqsCategoriesPage.10}} </a></li>
                        <li><a class='text-danger' href="{{ path_for('faqs.cat.delete', {'id': categorie.id}) }}"><i class="icon-trash"></i><b>  {{l.FaqsCategoriesPage.12}} </b></a>
                        
                        </li>
                    </ul>
                </li>
                </ul>
            </td>
            </tr>
            {% endfor  %}
        </tbody>
    </table>
</div>
              <center>{{pagination|raw}}</center>
			      </div>                    
			
			        

    </div>
</div>




















{% endblock %}