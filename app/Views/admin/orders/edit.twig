							<h1> <span class="text-semibold">تفاصيل الطلب #{{order.id}}</span></h1>
							
						</div>
						<div class="heading-elements">
		
 <a href="{{path_for('orders.delete',{id : order.id})}}" class="btn bg-danger btn-labeled heading-btn"><b><i class="icon-trash"></i></b> 
                  {{l.ordersedit.2}}     
                       </a>
                        
                        </div>
					</div>
				</div>
