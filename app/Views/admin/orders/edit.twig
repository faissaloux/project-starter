              <fieldset class="content-group">
                    <legend class="text-bold">{{l.ordersedit.17}}</legend>
                    {{order.notes}}
                    {% if order.notes is empty %}
                    {{l.ordersedit.18}} 
                    {% endif %}
            </fieldset>              
               </div>
              </div>        
	</div> 
   </div>
   
   
