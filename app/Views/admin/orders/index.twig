{% extends "admin/layout.twig" %}
{% block title %} {{l.orders.2}} {% endblock %}



{% block content %}

<!-- Main content -->
<div class="content-wrapper">


				<!-- Page header -->
				<div class="page-header page-header-transparent">
					<div class="page-header-content">
						<div class="page-title">
						{% if orders is not empty %}
							<h1> <span class="text-semibold">{{l.orders.2}}</span></h1>
							<ul class="breadcrumb position-left">
                                    <p>{{l.orders.4}} : {{ pagination.count }} {{l.orders.3}}</p>
							</ul>
						</div>
						
						
						
				        <div class="heading-elements">
		
 <a href="javascript:void(0);" data-toggle="modal" data-target="#modal_iconified" class="btn bg-danger btn-labeled heading-btn"><b><i class="icon-trash"></i></b>{{l.orders.5}}</a>
                        
                        </div>

                
    <div id="modal_iconified" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h5 class="modal-title"><i class="icon-menu7"></i> &nbsp;{{l.bulk_modal.1}}</h5>
            </div>

            <div class="modal-body">
                <div class="alert alert-info alert-styled-left text-blue-800 content-group">
                    {{l.bulk_modal.2}}
                    <button type="button" class="close" data-dismiss="alert">×</button>
                </div>
                {{l.bulk_modal.4}}
                <p>
                <br>
                </p>
            </div>

            <div class="modal-footer">
                <a href="{{ path_for('orders.bulkdelete') }}" class="btn btn-link text-danger">
                {{l.bulk_modal.6}}</a>
                <button class="btn btn-primary" data-dismiss="modal"> {{l.bulk_modal.7}} </button>
            </div>
        </div>
    </div>
    </div> 

                
                
                
                
                
					{% endif %}
					</div>
				</div>
				<!-- /page header -->
	

<!-- Content area -->
<div class="content">
		

 

			        {% include "admin/elements/flash.twig" %}




{% if orders is empty %}
			
			<div class="empty_state text-center">
			    
			<i class="icon-basket empty_state_icon"></i>
		<h4 style="color: #ababab;"> 
      <br>
		{{l.orders.6}}

		</h4>
	
			</div>
{% endif %}



{% if orders is not empty %}
<div class="panel panel-flat">
    <table class="table table-striped trclikable" >
        <thead>
            <tr>
                <th><b>{{l.orders.7}}</b></th>
                <th><b>{{l.orders.8}}</b></th>
                <th><b>{{l.orders.9}}</b></th>
                <th><b>{{l.orders.10}}</b></th>
            </tr>
        </thead>
        <tbody>  
        {% for order in orders %}
         <tr onclick="window.location='{{path_for('orders.edit',{ id : order.id })}}'">
            <td> <a href="#">#{{ order.id }}  {{ order.full_name() }}</a>    </td>
            <td>{{ order.created_at }}</td>
            <td>{{ order.get_statue() }}</td>
            <td>{{ order.total }}$</td>
         </tr>
         {% endfor %}   
        </tbody>
        <tfoot>
            <tr>
                <th><b>{{l.orders.7}}</b></th>
                <th><b>{{l.orders.8}}</b></th>
                <th><b>{{l.orders.9}}</b></th>
                <th><b>{{l.orders.10}}</b></th>
            </tr>
        </tfoot>        
    </table>
</div>
{% endif %}


		

<center>{{pagination|raw}}</center>

    </div>
</div>
    

{% endblock %}	
            
