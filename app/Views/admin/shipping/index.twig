{% extends "admin/layout.twig" %}
{% block title %} طرق الشحن {% endblock %}



{% block content %}

<div id="modal_iconified" class="modal fade">
<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
<button type="button" class="close" data-dismiss="modal">×</button>
<h5 class="modal-title"><i class="icon-menu7"></i> &nbsp;{{l.bulk_modal.1}}</h5>
</div>

<div class="modal-body">
<div class="alert alert-info alert-styled-left text-blue-800 content-group">
{{l.bulk_modal.2}}
<button type="button" class="close" data-dismiss="alert">×</button>
</div>
{{l.bulk_modal.4}}
<p>
<br>
</p>
</div>

<div class="modal-footer">
<a href="{{ path_for('shipping.bulkdelete') }}" class="btn btn-link text-danger">
{{l.bulk_modal.6}}</a>
<button class="btn btn-primary" data-dismiss="modal"> {{l.bulk_modal.7}} </button>
</div>
</div>
</div>
</div>

<!-- Main content -->
<div class="content-wrapper">



<!-- Page header -->
<div class="page-header page-header-transparent">
    <div class="page-header-content">
        <div class="page-title">
            <h1><i class="icon-arrow-right6 position-left"></i> <span class="text-semibold">طرق الشحن</span></h1>
        </div>

        <div class="heading-elements">
           {% if content is not empty %}
            <a href="{{ path_for('shipping.create') }}" class="btn bg-blue btn-labeled heading-btn"><b>
            <i class="icon-plus3"></i></b> اضافة طريقة شحن جديدة</a>
            
 <a href="javascript:void(0);" data-toggle="modal" data-target="#modal_iconified" class="btn bg-danger btn-labeled heading-btn"><b><i class="icon-trash"></i></b> حذف كل طرق الشحن</a>
                        
                        
		          
           {% endif %} 
        </div>
    </div>
</div>
<!-- /page header -->


<!-- Content area -->
<div class="content">
			        {% include "admin/elements/flash.twig" %}


{% if searchView != true %}
{% if content is empty %}
			
			<style>
    .empty_state_icon {
    font-size: 176px;
    opacity: 0.1;
}
    </style>
			<div class="empty_state text-center">
			    
			<i class=" icon-truck empty_state_icon"></i>
			<br/>
			<br/>
		<h6> 
 قم باضافة طرق الشحن التي ترغب في توفيرها لعملاء متجرك
        
        		    
		</h6>
		<br>
		<a href="{{ path_for('shipping.create') }}" class="btn bg-blue heading-btn btn-xlg">

                  اضف طريقة شحن جديدة
		  
		  </a>
		
		
		
			</div>
{% endif %}
{% endif %}



{% if content is not empty %}

<div class="panel panel-flat">
        <table class="table datatable-basic">
            <thead>
                <tr>
                    <th><b>العنوان</b></th>
                    <th><b>الحالة</b></th>
                    <th><b>عدد ايام التوصيل</b></th>
                    <th><b>السعر</b></th>
                    <th><b>تاريخ الإنشاء</b></th>
                    <th class="text-center"><b>تعديل</b></th>
                </tr>
            </thead>
            <tbody>
                {% for item in content %}
                <tr>
                    <td>
                        {% if item.name is empty %}
                    <a href="{{path_for('shipping.edit', {id : item.id})}}">سؤال بدون عنوان</a>
                    {% else %}
                    <a href="{{path_for('shipping.edit', {id : item.id})}}">{{ item.name }}</a>
                    {% endif %}
                                                
                    </td>
                    
                    
                    <td>{{item.statueDisplay()}}</td>
                    <td>{{item.delivery_days}}</td>
                    <td>{{item.cost}}</td>
                    <td>{{item.created_at.toDateTimeString()}}</td>
                    
                    
                    
                    <td class="text-center">
                        <ul class="icons-list">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <i class="icon-menu9"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li><a href="{{path_for('shipping.edit', {id : item.id})}}" class=""><i class="icon-pencil7"></i><b>تعديل طريقة الشحن </b></a></li>
                                    <li><a href="{{path_for('shipping.delete', {id : item.id})}}" class="text-danger"><i class="icon-trash"></i><b>حذف طريقة الشحن </b></a></li>
                                     <li>
                        <a href="{{path_for('shipping.clone', {id : item.id})}}" class="text-bg-info">
                  <i class="icon-stack-plus position-left"></i> تكرار طريقة الشحن
              </a>
                        
                        </li>
                                    
                                </ul>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor  %}
            </tbody>
            <thead>
                <tr>
                    <th><b>العنوان</b></th>
                    <th><b>الحالة</b></th>
                    <th><b>عدد ايام التوصيل</b></th>
                    <th><b>السعر</b></th>
                    <th><b>تاريخ الإنشاء</b></th>
                    <th class="text-center"><b>تعديل</b></th>
                </tr>
            </thead>
        </table>
        
    </div>

<center>
{{pagination|raw}}
</center>


</div>
{% endif %}

</div>
{% endblock %}