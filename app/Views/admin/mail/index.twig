{% extends "admin/layout.twig" %}
{% block title %} {{l.contact.1}} {% endblock %}



{% block content %}

<!-- Main content -->
<div class="content-wrapper">


				<!-- Page header -->
				<div class="page-header page-header-transparent">
					<div class="page-header-content">
						<div class="page-title">{% if content is not empty %}
							<h1> <span class="text-semibold">{{l.contact.1}}</span></h1>
							<p>{{l.contact.2}}</p>
								</div>	
						
								
										
												
						<div class="heading-elements">
                        <a href="javascript:void(0);" data-toggle="modal" data-target="#modal_iconified" class="btn bg-danger btn-labeled heading-btn"><b><i class="icon-trash"></i></b> 
                        {{l.InboxPage.1}}
                        </a>
                        </div>
                        
<!-- Iconified modal -->
<div id="modal_iconified" class="modal fade">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h5 class="modal-title"><i class="icon-menu7"></i> &nbsp;{{l.bulk_modal.1}}</h5>
        </div>

        <div class="modal-body">
            <div class="alert alert-info alert-styled-left text-blue-800 content-group">
                {{l.bulk_modal.2}}
                <button type="button" class="close" data-dismiss="alert">×</button>
            </div>
            {{l.bulk_modal.4}}
            <p>
            <br>
            </p>
        </div>

        <div class="modal-footer">
            <a href="{{ path_for('Mail.bulkdelete') }}" class="btn btn-link text-danger">
            {{l.bulk_modal.6}}</a>
            <button class="btn btn-primary" data-dismiss="modal"> {{l.bulk_modal.7}} </button>
        </div>
    </div>
</div>
</div>
					
					
					
					<!-- /iconified modal -->	
						{% endif %}
					</div>
				</div>
				<!-- /page header -->


<!-- Content area -->
<div class="content">
		
{% include "admin/elements/flash.twig" %}

{% if emails is empty %}
<div class="empty_state text-center">
    <i class=" icon-envelop5 empty_state_icon"></i>
    <h4 style="color: #ababab;">
        {{l.Emails.219}}
        <br> {{l.Emails.220}}
    </h4>
</div>
{% endif %}
   

{% if content is not  empty %}
<div class="panel panel-flat">
    <table class="table datatable-basic mails-table">
        <thead>
            <tr>
                <th><b>{{l.Emails.221}}</b></th>
                <th><b>{{l.Emails.222}}</b></th>
                <th style='max-width:150px;'><b>{{l.Emails.223}}</b></th>
                <th><b>{{l.Emails.224}}</b></th>

            </tr>
        </thead>
        <tbody>

    {% for email in content %}
        <tr {% if email.seen == 1 %} class="seen" {% endif %}  onclick="window.location='{{ path_for('Mail.action', {'id': email.id}) }}';">
            <td>{{email.name}}</td>
            <td>{{email.email}}</td>
            <td>{{email.snippet()}}</td>
            <td>{{email.created_at }}</td>
        </tr>
       {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}

<center>{{pagination|raw}}</center>

</div>
</div>
{% endblock %}