{% if pagination.needed  %} 
    <center>
    <ul class="pagination pagination-rounded">
        {% if pagination.page != 1 %}
        <li><a href="?page={{ pagination.prev }}{% if searchView == true %}&search={{searchQuery}}{% endif %}">&lsaquo;</a></li>
        {% endif %}
        {% for i in range(1, pagination.lastpage) %}
            <li {% if pagination.page == i %} class="active" {% endif %}>
            <a href="?page={{ i }}{% if searchView == true %}&search={{searchQuery}}{% endif %}">{{ i }}</a>
            </li>
        {% endfor %}

        {% if pagination.page != pagination.lastpage %}
        <li><a href="?page={{ pagination.next }}{% if searchView == true %}&search={{searchQuery}}{% endif %}">&rsaquo;</a></li>
        {% endif %}
    </ul>           
    </center> 
{% endif %}