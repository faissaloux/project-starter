{% extends "admin/layout.twig" %} {% block title %} {{l.postscreate.2}} {% endblock %} {% block content %}
<!-- Main content -->
<div class="content-wrapper">

    <!-- Page header -->
    <div class="page-header page-header-default">
        <div class="page-header-content">
            <div class="page-title">

                <h1> <span class="text-semibold"><i class="icon-arrow-right6 position-left goback"></i> {{l.postscreate.2}}</span></h1>
            </div>


        </div>

        <div class="breadcrumb-line">
            <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
            <ul class="breadcrumb">
                <li><a href="{{path_for('admin.index')}}" title="{{l.bread.1}}"><i class="icon-home2 position-left"></i>{{l.bread.1}}</a></li>
                <li><a href="{{path_for('posts')}}" title="{{l.posts.1}}">{{l.posts.1}}</a></li>
                <li class="active" title="{{l.postscreate.2}}">{{l.postscreate.2}}</li>

            </ul>
        </div>


    </div>

    <!-- /page header -->


    <!-- Content area -->
    <div class="content">





        {% include "admin/elements/flash.twig" %}

        <div class="col-md-12">

            <form enctype="multipart/form-data" id="user_form" method='post' action="{{ path_for('posts.store') }}">
                <input type="hidden" name="thumbnailChanged" id="isAdChanged" value="false" />


                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label">{{l.postscreate.4}}</label>
                        <input type="text" id="postitlte" class="form-control" name="title" placeholder="{{l.postscreate.4}}" value="{{old.title}}" />
                    </div>

                    <textarea name="post_content" id="posteditor">{{old.post_content}}</textarea>

                </div>

                <div class="col-md-4">

                    <br>

                    <div class="panel panel-success">
                        <div class="panel-heading" style="background-color: #62A8EA;border: 0;">
                            <h6 class="panel-title">{{l.postscreate.8}}</h6>
                            <div class="heading-elements">
                                <ul class="icons-list">
                                    <li>
                                        <a data-action="collapse"></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="panel-body ">
                            <div class="preview-thumbnail">
                                <img src="" id="profile_avatar" />
                            </div>
                            <label for="Upload-thumbnail"><i class="icon-image2 position-left"></i> {{l.postscreate.9}} </label>
                            <input name="post_thumbnail" id="Upload-thumbnail" accept="image/jpg, image/jpeg, image/png" style="visibility:hidden;" type="file" />
                        </div>
                    </div>


                    <div class="panel panel-success">
                        <div class="panel-heading" style="background-color: #F2A654;border: 0;">
                            <h6 class="panel-title">{{l.PostCreatePage.21}}</h6>
                            <div class="heading-elements">
                                <ul class="icons-list">
                                    <li>
                                        <a data-action="collapse"></a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="panel-body">




                            <div class="form-group">
                                <label class="control-label">{{l.PostCreatePage.22}}</label>
                                <input type="text" id="postitlte" class="form-control" name="slug" placeholder="{{l.PostCreatePage.22}}" value="">
                            </div>
                            <div class="form-group">
                                <label class="control-label">{{l.PostCreatePage.23}}</label>
                                <select name="postCategory" style="width:100%;" class="postCategory">
            <option value="not_speci">{{l.postscreate.7}}</option>
                {% for categorie in categories %}
                <option value="{{categorie.id}}">{{categorie.name}}</option>
                {% endfor %} 
          </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">{{l.PostCreatePage.24}}</label>
                                <select name="postCategory" style="width:100%;" class="postCategory">
                <option value="{{categorie.id}}">نشر المقالة</option>
                <option value="{{categorie.id}}">حفظ في المسودة</option>
               
          </select>
                            </div>
                        </div>

                        <div class="panel-footer text-center alpha-grey actionfooter">
                            <button type="submit" class="btn btn-block btn-primary">{{l.postscreate.5}} <i class="icon-arrow-left13 position-right"></i></button>
                        </div>
                    </div>




                </div>
            </form>
        </div>
    </div>
    <!-- /content area -->
</div>






{% endblock %}