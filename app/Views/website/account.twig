{% extends "website/layout.twig" %}
{% block title %} My Account {% endblock %}

{% block content %}

	<!-- Main Content -->
	<div class="page-container" id="PageContainer">
		<main class="main-content" id="MainContent" role="main">
			<section class="collection-heading heading-content ">
				<div class="container">
					<div class="row">
						<div class="collection-wrapper">
							<h1 class="collection-title">My Account</h1>
							<div class="breadcrumb-group">
								<div class="breadcrumb clearfix">
										<a href="">Home</a>
									    <span class="arrow-space">/</span>
										<a href="">My Account</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
			<section class="account-content">
				<div class="account-content-wrapper">
					<div class="container">
						{% include "admin/elements/flash.twig" %}
							<div class="col-md-8">
                           
                               <style>
                                form#RegisterForm {
    background-color: #fff;
    padding: 15px 15px 25px;
    width: 100%;
    float: left;
}


                                </style>
		<form method="post" action="{{path_for('website.profile')}}" class="RegisterForm" id="RegisterForm">
         <div class="alert alert-danger registerjs" style="display:none;"></div>
            <input type="hidden" name="user_id" value="3">
            <div class="content">
             
       
             
              <ul class="form-list">
                <div class='form-group'>
                  <label>Full Name </label>
                
                  <input type="text" class="form-control" value="{{user.full_name}}" name="full_name">
                </div>
                
                 <div class='form-group'>
                  <label for="email">Email Address </label>
              
                  <input type="text" class="form-control" value="{{user.email}}" id="email" name="email">
                </div>
                

                <div class='form-group'>
                  <label>Phone</label>
                  
                  <input type="text" class="form-control" name="phone" value="{{user.phone}}">
                </div>

                <div class='form-group'>
                  <label for="password">gender</label>
               
<div class="form-group">
<label class="radio-inline">
<input type="radio" value="male" class="styled" name="gender" {% if user.gender  == 'male' %} checked="checked" {% endif %}>male</label>

<label class="radio-inline">
<input type="radio" value="female" class="styled" {% if user.gender  == 'female' %} checked="checked" {% endif %}>female</label>
</div>
</div>











              </ul>
              <div class="buttons-set">
                <button type="submit" class="btn btn-primary button"><span>Save Updates</span></button>
              </div>
            </div>
          </form>
          
          
          
          
							</div>
							  {% include "website/elements/accountSidbar.twig" %}
						
					</div>
				</div>
			</section>
		</main>
	</div>

{% endblock %}